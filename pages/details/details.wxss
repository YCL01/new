.header{
  width: 100%;
}
.banner{
  width: 100%;
  height: 750rpx;
}
.description{
  width: 100%;
  height: 240rpx;
  padding: 36rpx;
  box-sizing: border-box;
}
.title{
  font-size: 28rpx;
  font-weight: 700;
  color: rgb(7,17,27);
  /* line-height: 28px; */
}
.SalesVolume{
  font-size: 20rpx;
  color: rgb(147, 153, 159);
  /* line-height: 20rpx; */
  margin-top:16rpx;
}
.SalesVolume text{
  margin-left:24rpx;
}
.buy{
  width: 100%;  
  margin-top: 36rpx;
  height: 50rpx;
  line-height:50rpx;
}
.price{
  float: left;
  font-size:20rpx/28rpx;
  font-weight:normal/700;
  color: red;
}
.price text{
  margin-left:24rpx;
  font-size:20rpx;
  font-weight:normal/700;
  color:rgb(147,153, 159);
  /* line-height:48rpx; */
}
.buy>button{
  float: right;
  width: 148rpx;
  height: 48rpx;
  line-height:48rpx;
  border-radius: 24rpx;
  background: rgb(0,160,220);
  font-size:20rpx;
  color:rgb(255,255,255);
}
.bor{
  width:100%;
  height:32rpx;
  border: 1rpx solid;
  color:#f3f5f7;
  border-color:rgba(7,17,27,0.1)
}
.introduce{
  width: 100%;
  padding: 36rpx;
  box-sizing:border-box;
}
.introduce>view:nth-child(2){
  margin-top: 12rpx;
  width:90%;
  font-size: 24rpx;
  font-weight:200;
  color: rgb(77,85,93);
  line-height: 48rpx;
  letter-spacing: 3rpx;
}
.evaluate{
  width: 100%;
  padding: 36rpx;
  box-sizing:border-box;
}
.btn {
  width:90%;
  height: 80rpx;
  margin-top:12rpx;
  padding: 24rpx 0 36rpx 0;
  border-bottom: 1rpx solid rgba(7,17,27,0.1);
}
.btn>text{
  display:inline-block;
  width:180rpx;
  height:80rpx;
  line-height:80rpx;
  text-align: center;
  margin-right: 16rpx;
  font-size:24rpx/16rpx;
  border-radius: 2rpx;
}
.btn>text:nth-child(1){
  color: rgb(255,255,255);
  background:rgb(66,158,214);
}
.btn>text:nth-child(2){
  color:rgb(77,85,93);
  background:rgb(210,235,246);
}
.btn>text:nth-child(3){
  color:rgb(77,85,93);
  background:rgba(77,85,93,0.2);
}
.JustLook{
  width:100%;
  margin: 24rpx 0;
  font-size: 24rpx;
  color: rgb(147,153,159);
  display: flex;
  align-items:center;
}
.JustLook>text{
  display: inline-block;
  margin-right:8rpx;
  font-size:48rpx;
  width:48rpx;
  height:48rpx;
  line-height:40rpx;
  text-align:center;
  background:rgb(147,153,159);
  border-radius:50%;
  color:white;
}
.content{
  width: 100%;
  padding-top:32rpx;
  box-sizing:border-box;
  border-top: 1rpx solid rgb(204,204,204);
}
.content>view{
  width:100%;
  height:132rpx;
}
.content .top{
  width: 100%;
  height: 80rpx;
  line-height:80rpx;
}
.time{
  float: left;
  font-size: 20rpx;
  color:rgb(147,153,159);
}
.HeadPortrait{
  float:right;
}
.HeadPortrait>image{
  width:48rpx;
  height:48rpx;
  border-radius:50%;

}


